<Window x:Class="StyleMaster.UI.PatternSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择填充图案" Height="500" Width="680"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <SolidColorBrush x:Key="MainBgBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TitleBarBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="TextBrush" Color="#DCDCDC"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <Style x:Key="StarButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <TextBlock x:Name="Icon" Text="★" FontSize="18" Foreground="#555555" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Icon" Property="Foreground" Value="#FFD700"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Icon" Property="FontSize" Value="20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource MainBgBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="{StaticResource TitleBarBrush}" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="选择填充图案" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center" Margin="15,0" FontWeight="Bold"/>
                <Button Content="✕" HorizontalAlignment="Right" Width="40" Background="Transparent" Foreground="Gray" BorderThickness="0" Click="Close_Click"/>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" Height="30">
                <TextBox x:Name="SearchBox" Width="200" Background="#333333" Foreground="White" BorderBrush="{StaticResource BorderBrush}" 
                         VerticalContentAlignment="Center" Margin="5,0" Tag="搜索图案..." TextChanged="SearchBox_TextChanged"/>
                <CheckBox Content="仅显示收藏" Foreground="White" VerticalAlignment="Center" Margin="15,0" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
            </StackPanel>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
                <ItemsControl x:Name="PatternList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" Width="128" Height="155">
                                <Border x:Name="MainBorder" Background="#2D2D2D" BorderBrush="#3F3F46" BorderThickness="1" CornerRadius="3" Cursor="Hand" MouseLeftButtonDown="Item_Click">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="128"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Grid.Row="1" Text="{Binding Name}" Foreground="White" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="2"/>
                                    </Grid>
                                </Border>

                                <ToggleButton IsChecked="{Binding IsFavorite}" Style="{StaticResource StarButtonStyle}" 
                                              HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Width="25" Height="25"
                                              Click="Star_Click"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger SourceName="MainBorder" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="MainBorder" Property="Background" Value="#3F3F46"/>
                                    <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>